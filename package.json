{
  "name": "fiverr-clone",
  "version": "1.0.0",
  "description": "A freenlance plate form for freelancer just like fiverr",
  "main": "index.js",
  "type": "module",
  "author": "zlaam",
  "license": "MIT",
  "scripts": {
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "fmt": "prettier --write .",
    "prebuild": "yarn lint && yarn fmt && yarn type-check",
    "build": "rimraf -rf ./dist  && yarn tsc --build",
    "dev": "yarn build && bun --watch   --env-file .env ./server.ts",
    "start": "yarn build && node --env-file .env ./dist/server.js"
  },
  "dependencies": {
    "@prisma/client": "^5.21.1",
    "@types/node": "^22.8.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.21.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/bcrypt": "^5.0.2",
    "@types/eslint": "^9.6.1",
    "@types/express": "^5.0.0",
    "eslint": "^9.13.0",
    "globals": "^15.11.0",
    "prettier": "^3.3.3",
    "prisma": "^5.21.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.11.0"
  }
}
